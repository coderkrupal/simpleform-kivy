#:kivy 2.3.0

<MyGridLayout>
    name:name
    rollno:rollno
    GridLayout:
        cols:1
        size:root.width,root.height

        GridLayout:
            cols:2

            Label:
                text:"NAME:"
            TextInput:
                id:name
                multiline:False

            Label:
                text:"ID:"
            TextInput:
                id:rollno
                multiline:False

        Button:
            text:"submit" 
            on_press:root.press()      
                
    
    