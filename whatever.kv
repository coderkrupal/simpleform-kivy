#:kivy 2.3.0
#:import utils kivy.utils

<MyGridLayout>
    name:name
    rollno:rollno
    GridLayout:
        cols:1  
        size:root.width,root.height

        GridLayout:
            cols:2

            Label:
                text:"NAME:"
            TextInput:
                id:name
                multiline:False

            Label:
                text:"ID:"
            TextInput:
                id:rollno
                multiline:False

        Button:
            text:"submit" 
            background_color:utils.get_color_from_hex('#00FFFF')
            on_press:root.press()
            
                
                
    
    